<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Консольный аппендер ; аппендер - присоединяет логи куда-либо -->
        <Console name="Console" target="SYSTEM_OUT">
             <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n }{TRACE=magenta}" disableAnsi="false"/>
        </Console>

        <!-- Файловый аппендер -->
        <!-- append="false" - для перезаписи файла после каждого запуска программы -->
        <File name="FileAppender" fileName="logs/file.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Логгер для классов -->
        <!-- name - указывает, где будет применятся level="DEBUG" логов -->
        <Logger name="com" level="DEBUG" additivity="false">
            <!-- AppenderRer - сообщает что делать с логами, куда их выводить -->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <Logger name="Main" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Корневой логгер -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>



























